<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">Edit: <%= blog.title %></div>
<!--   cant use PUT requests in html forms so we need ?_method=PUT -->
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label>Post Content</label>
      <textarea name="blog[body]" cols="30" rows="15"><%= blog.body %></textarea>
    </div>
    <input class="ui blue big basic button" type="submit">
  </form>
</div>
<% include ./partials/footer %>